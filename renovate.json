{
    "extends": [
        "config:recommended"
    ],
    "dependencyDashboard": true,
    "prCreation": "immediate",
    "packageRules": [
        {
            "matchDatasources": [
                "helm-values"
            ],
            "automerge": false
        }
    ],
    "regexManagers": [
        {
          "fileMatch": ["^charts/ha-mqtt/Chart\\.yaml$"],
          "matchStrings": [
            "appVersion:\\s*\"(?<currentValue>.*?)\""
          ],
          "datasourceTemplate": "docker",
          "depNameTemplate": "homeassistant/home-assistant"
        }
    ]
}
