{
    "extends": [
        "config:recommended"
    ],
    "dependencyDashboard": true,
    "prCreation": "immediate",
    "packageRules": [
        {
            "matchDatasources": [
                "helm-values"
            ],
            "automerge": false
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^charts/ha-mqtt/Chart\\.yaml$"
            ],
            "matchStrings": [
                "appVersion:\\s*\"(?<currentValue>.*?)\""
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "homeassistant/home-assistant"
        }
    ]
}
